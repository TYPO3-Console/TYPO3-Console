{
    "repositories": {
        "local": {
            "type": "path",
            "url": "Packages/*"
        },
        "fixtures": {
            "type": "path",
            "url": "Tests/Console/Functional/Fixtures/Extensions/*"
        }
    },
    "name": "helhum/typo3-console",
    "type": "typo3-cms-extension",
    "description": "A reliable and powerful command line interface for TYPO3 CMS",
    "keywords": [
        "TYPO3",
        "cli",
        "console",
        "command",
        "commandline"
    ],
    "homepage": "https://insight.helhum.io/post/104528981610/about-the-beauty-and-power-of-typo3-console",
    "support": {
        "issues": "https://github.com/TYPO3-Console/TYPO3-Console/issues",
        "source": "https://github.com/TYPO3-Console/TYPO3-Console",
        "docs": "https://docs.typo3.org/p/helhum/typo3-console/main/en-us/"
    },
    "authors": [
        {
            "name": "Helmut Hummel",
            "email": "info@helhum.io",
            "role": "Developer",
            "homepage": "https://helhum.io"
        }
    ],
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.1",
        "composer-runtime-api": "^2.1",

        "typo3/cms-backend": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-composer-installers": "^4.0@rc || >=5.0",
        "typo3/cms-core": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-extbase": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-extensionmanager": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-fluid": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-frontend": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-install": "^11.5.3 || ^12.2 || dev-main",

        "symfony/console": "^5.4 || ^6.1",
        "symfony/process": "^5.4 || ^6.1",
        "helhum/config-loader": ">=0.9 <0.13",
        "helhum/php-error-reporting": "^1.0"
    },
    "require-dev": {
        "typo3/cms-filemetadata": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-recordlist": "^11.5.3 || ^12.2 || dev-main",
        "typo3/cms-reports": "^11.5.3 || ^12.2 || dev-main",
        "typo3-console/create-reference-command": "@dev",
        "symfony/expression-language": "^5.4 || ^6.1",
        "symfony/filesystem": "^5.4 || ^6.1",
        "phpunit/phpunit": "^9.5.25",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "typo3-console/sql-command": "@dev",
        "phpspec/prophecy": "^1.15",
        "phpspec/prophecy-phpunit": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.2",
        "dg/bypass-finals": "^1.4"
    },
    "conflict": {
        "typo3/cms-core": "11.5.25"
    },
    "autoload": {
        "psr-4": {
            "Helhum\\Typo3Console\\": [
                "Classes/Console/",
                "Classes/Compatibility/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Helhum\\Typo3Console\\Tests\\": "Tests/Console/"
        }
    },
    "replace": {
        "typo3-ter/typo3-console": "self.version"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "scripts": {
        "set-version": [
            "Helhum\\Typo3Console\\Composer\\ScriptHelper::setVersion"
        ],
        "extension-copy": [
            "@extension-clean",
            "mkdir -p ../extension",
            "cp -r . ../extension/",
            "mv ../extension/Resources/Private/ExtensionArtifacts/ext_emconf.php ../extension"
        ],
        "extension-build": [
            "@extension-copy",
            "@composer install -d ../extension/Resources/Private/ExtensionArtifacts/"
        ],
        "extension-release": [
            "@extension-build",
            "rm -rf ../extension/.git/",
            "rm -rf ../extension/Packages/",
            "mv ../extension/Resources/Private/ExtensionArtifacts/Resources/Public ../extension/Resources/",
            "rm -rf ../extension/Resources/Private/ExtensionArtifacts/Resources ../extension/Resources/Private/ExtensionArtifacts/composer.*",
            "rm -rf ../extension/Resources/Private/Patches/",
            "rm -rf ../extension/Tests/",
            "rm -rf ../extension/.ddev/",
            "rm -rf ../extension/.github/",
            "rm ../extension/.editorconfig ../extension/.gitignore ../extension/.gitattributes ../extension/sonar-project.properties  ../extension/phpunit.xml.dist  ../extension/.styleci.yml  ../extension/.php-cs-fixer.php"
        ],
        "extension-clean": [
            "rm -rf ../extension"
        ],
        "docs:render": [
            "docker-compose -f render-documentation.yml up"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "8.0.x-dev"
        },
        "typo3/cms": {
            "Package": {
                "serviceProvider": "Helhum\\Typo3Console\\ServiceProvider",
                "protected": true,
                "partOfMinimalUsableSystem": true
            },
            "extension-key": "typo3_console",
            "ignore-as-root": false
        }
    }
}
